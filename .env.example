# API Keys
ANTHROPIC_API_KEY=your_anthropic_key_here

# Discord Configuration (User Token)
DISCORD_USER_TOKEN=your_discord_user_token_here
DISCORD_CHANNEL_IDS=123456789,987654321
DISCORD_MONITORED_USERS=trader1,trader2

# Interactive Brokers
IBKR_HOST=127.0.0.1
IBKR_PORT=4002  # 4002 for Gateway paper, 4001 for Gateway live (7497/7496 for TWS)
IBKR_CLIENT_ID=1  # Just pick any number 1-9999 (most people use 1)

# Risk Parameters
ACCOUNT_BALANCE=10000
RISK_PER_TRADE_PERCENT=0.5
DAILY_MAX_LOSS_PERCENT=2.0
MAX_LOSS_STREAK=3

# Position Sizing
INITIAL_CONTRACTS=1      # Always start with 1 contract (fixed, not risk-based)
MAX_CONTRACTS=2          # Maximum total contracts allowed per position
MAX_ADDS_PER_TRADE=1     # Maximum number of ADD operations per trade

# Auto Stop Loss & Targets
AUTO_STOP_LOSS_PERCENT=25.0  # Stop at 25% below entry if not specified
RISK_REWARD_RATIO=2.0  # Target 2x the risk (1:2 R:R)

# Trading Hours (UTC time)
TRADING_HOURS_START=13:30
TRADING_HOURS_END=20:00

# Other Risk Settings
MAX_BID_ASK_SPREAD_PERCENT=10.0
HIGH_RISK_SIZE_REDUCTION=0.5
EXTREME_RISK_SIZE_REDUCTION=0.25

# Mode (DRY_RUN=true means no IBKR connection, just simulated trades)
DRY_RUN=true

# Telegram Notifications
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
# Daily summary will be sent after TRADING_HOURS_END
